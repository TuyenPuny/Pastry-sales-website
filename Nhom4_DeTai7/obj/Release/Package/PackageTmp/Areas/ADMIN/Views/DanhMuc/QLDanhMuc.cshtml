@model IEnumerable<Nhom4_DeTai7.Areas.ADMIN.Model.DANHMUC>

@{
    ViewBag.Title = "QLDanhMuc";
    Layout = "~/Areas/ADMIN/Views/Shared/_LayoutPage1.cshtml";
}
<style>
    .table th, .table td {
        text-align: center;
        vertical-align: middle;
    }

    .table th {
        font-weight: bold;
    }
</style>



<div class="main-panel">
    <nav class="navbar navbar-default">
        <div class="container-fluid">
            <div class="navbar-header">
                <a class="navbar-brand" href="@Url.Action("QLDanhMuc", "DanhMuc")">Danh sách danh mục</a>
            </div>
            <div class="navbar-header">
                <a class="navbar-brand" href="@Url.Action("ThemDanhMuc", "DanhMuc")">Thêm danh mục</a>
            </div>
        </div>
    </nav>
    <div class="container" >
        <h3 style="color:chocolate; text-align:center; padding:40px"> DANH SÁCH</h3>
        <table class="table table-bordered">
            <thead style="background-color: #ff6a00;">
                <tr>
                    <th>
                        Mã danh mục
                    </th>
                    <th>
                        Tên danh mục
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.ID_DM)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TEN_DM)
                        </td>
                        <td>
                            @Html.ActionLink("Sửa", "EditCategory", new { ID_DM = item.ID_DM }, new { @class = "btn btn-primary btn-sm" })
                            @Html.ActionLink("Xóa", "Delete", new { ID_DM = item.ID_DM }, new { @class = "btn btn-danger btn-sm", onclick = "return confirm('Bạn chắc chắn muốn xóa sản phẩm này?');" })


                        </td>
                    </tr>
   }
            </tbody>
        </table>
    </div>

</div>